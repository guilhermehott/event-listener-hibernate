<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="event-listener-hibernate">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.guilhermehott.model.event_listener_hibernate.Event</class>
		<class>com.guilhermehott.model.event_listener_hibernate.Person</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:." />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			
			 <property name="hibernate.ejb.event.post-load" 
				value="com.guilhermehott.event_listener_hibernate.PostLoadEventListener"/>
			<property name="hibernate.ejb.event.post-insert" 
				value="com.guilhermehott.event_listener_hibernate.PostInsertEventListener"/>
			<property name="hibernate.ejb.event.post-update" 
				value="com.guilhermehott.event_listener_hibernate.PostUpdateEventListener"/>
			<property name="hibernate.ejb.event.post-delete" 
				value="com.guilhermehott.event_listener_hibernate.PostDeleteEventListener"/>

		</properties>
	</persistence-unit>
</persistence>